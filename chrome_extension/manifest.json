{
  "manifest_version": 2,
  "name": "Null Pointer",
  "version": "1.0.0",
  "background": {
    "page": "./background.html"
  },
  "browser_action": {
    "default_title": "Null Pointer",
    "default_icon": {
      "16": "images/Logo.png",
      "32": "images/Logo.png",
      "48": "images/Logo.png",
      "128": "images/Logo.png"
    }
  },
  "permissions": [
    "contextMenus",
    "contentSettings",
    "cookies",
    "idle",
    "tabs",
    "https://*/* ",
    "http://*/* ",
    "activeTab"
  ],
  "commands": {
    "get_suggestion": {
      "suggested_key": {
        "default": "Ctrl+Space"
      },
      "description": "Toggle Null Pointer"
    },
    "get_paraphrase": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Get Paraphrase"
    },
    "get_summary": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Get Summary"
    }
  }
}