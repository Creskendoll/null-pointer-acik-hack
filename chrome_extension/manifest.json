{
  "manifest_version": 2,
  "name": "Test Extension",
  "version": "0.0",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "background": {
        "scripts": [
          "content.js"
        ],
        "persistent": false
      },
    }
  ],
  "browser_action": {
    "default_title": "Test Extension",
    "default_icon": {
      "16": "images/null_pointer.png",
      "32": "images/null_pointer.png",
      "48": "images/null_pointer.png",
      "128": "images/null_pointer.png"
    }
  },
  "permissions": [
    "activeTab"
  ]
}